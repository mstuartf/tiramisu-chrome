{
  "manifest_version": 3,
  "name": "Tiramisu",
  "version": "2.0.0",
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "description": "Browse LinkedIn and generate networking ice breakers using AI.",
  "action": {
    "default_icon": "128.png",
    "default_popup": "index.html",
    "default_title": "open popup"
  },
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["https://*/*"],
  "background": {
    "service_worker": "./static/js/background.js"
  }
}
